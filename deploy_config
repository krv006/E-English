sudo nano /etc/nginx/sites-available/e_english
/etc/nginx/sites-enable/e_english

server {
    listen       8024;
    server_name  16.16.24.121;

    location = /favicon.ico { access_log off; log_not_found off; }

    location /static/ {
        root /var/www/project/e-english;
    }

    location /media/ {
        root /var/www/project/e-english;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/var/www/project/e-english/falcon.sock;
    }
}







/etc/systemd/system/e_english.service


[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/var/www/project/e-english
ExecStart=/var/www/project/e-english/.venv/bin/gunicorn --workers 1 --bind unix:/var/www/project/e-english/falcon.sock root.wsgi:application

[Install]
WantedBy=multi-user.target



/var/www/projects/e-english


