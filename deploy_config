sudo nano /etc/nginx/sites-available/english

/etc/nginx/sites-enable/english

server {
    listen       8012;
    server_name  206.189.36.11;

    location = /favicon.ico { access_log off; log_not_found off; }

    location /static/ {
        root /var/www/english;
    }

    location /media/ {
        root /var/www/english;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/var/www/english/english.sock;
    }
}







/etc/systemd/system/english.service


[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/var/www/english
ExecStart=/var/www/english/.venv/bin/gunicorn --workers 1 --bind unix:/var/www/english/english.sock root.wsgi:application

[Install]
WantedBy=multi-user.target



