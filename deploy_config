/etc/nginx/sites-available/e_english
/etc/nginx/sites-enable/e_english

server {
    listen       8001;
    server_name  51.20.115.45;

    location = /favicon.ico { access_log off; log_not_found off; }

    location /static/ {
        root /var/www/projects/E-english;
    }

    location /media/ {
        root /var/www/projects/E-english;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/var/www/projects/E-english/falcon.sock;
    }
}







/etc/systemd/system/e_english.service


[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/var/www/projects/E-english
ExecStart=/var/www/projects/E-english/.venv/bin/gunicorn --workers 1 --bind unix:/var/www/projects/E-english/falcon.sock root.wsgi:application

[Install]
WantedBy=multi-user.target


================== celery service ==================
/etc/systemd/system/celery.service


[Unit]
Description=celery service
After=network.target

[Service]
PIDFile=/run/celery/pid
User=celery
Group=celery
RuntimeDirectory=/var/www/projects/E-english
WorkingDirectory=/var/www/projects/E-english
ExecStart=celery -A proj -l info
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
Restart=on-abort
PrivateTmp=true

[Install]
WantedBy=multi-user.target



